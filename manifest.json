{
  "manifest_version": 3,
  "name": "SalesmanBot - AI PC Assistant",
  "version": "1.0",
  "description": "AI-powered personal salesman to help you find PC parts and builds on e-commerce sites",
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel",
    "scripting"
  ],
  "host_permissions": [
    "*://*.amazon.in/*",
    "*://*.amazon.com/*",
    "*://*.flipkart.com/*",
    "*://www.walmart.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "Salesman bot.png"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.in/*",
        "*://*.amazon.com/*", 
        "*://*.flipkart.com/*",
        "*://www.walmart.com/*"
      ],
      "js": ["utils/productExtractor.js", "utils/queryParser.js", "utils/aiService.js", "utils/contextTracker.js", "content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["utils/*.js", "content.js"],
      "matches": ["*://*.amazon.in/*", "*://*.amazon.com/*", "*://*.flipkart.com/*", "*://www.walmart.com/*"]
    }
  ]
}
